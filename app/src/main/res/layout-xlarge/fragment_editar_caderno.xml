<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lab11.nolram.cadernocamera.EditarCadernoActivityFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/cor_forte"
        android:title="@string/criar_caderno"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:layout_below="@id/toolbar"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/linearLayout">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:textSize="30sp"
                    android:hint="@string/txt_title"
                    android:id="@+id/edtxt_titulo" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:hint="@string/txt_description"
                    android:id="@+id/edtxt_descricao" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/txt_cor"
                android:id="@+id/txt_cor" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:id="@+id/rd_cor"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true">

                    <RadioButton
                        android:id="@+id/rd_alizarin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_alizarin"/>

                    <RadioButton
                        android:id="@+id/rd_amethyst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_amethyst"/>

                    <RadioButton
                        android:id="@+id/rd_carrot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_carrot"/>

                    <RadioButton
                        android:id="@+id/rd_pink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_clouds"/>

                    <RadioButton
                        android:id="@+id/rd_concrete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_concrete"/>

                    <RadioButton
                        android:id="@+id/rd_emerald"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_emerald"/>

                    <RadioButton
                        android:id="@+id/rd_peter_river"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_peter_river"/>

                    <RadioButton
                        android:id="@+id/rd_sun_flower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_sun_flower"/>

                    <RadioButton
                        android:id="@+id/rd_turquoise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_turquoise"/>

                    <RadioButton
                        android:id="@+id/rd_wet_asphalt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_wet_asphalt"/>

                    <RadioButton
                        android:id="@+id/rd_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_black"/>

                </RadioGroup>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/txt_icon"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/btn_img_picker"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_alignParentBottom="true">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_cancelar"
                    android:layout_margin="10dp"
                    android:theme="@style/ButtonCancel"
                    android:textColor="@color/branco"
                    android:id="@+id/btn_cancelar"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_editar_caderno"
                    android:theme="@style/ButtonConfirm"
                    android:textColor="@color/branco"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_editar_caderno"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
