<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lab11.nolram.cadernocamera.CriarFolhaActivityFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:id="@+id/txt_title"
            android:textColor="@color/preto"
            android:text="Titulo"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/edtxt_titulo_folha"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:id="@+id/txt_imagem"
            android:textColor="@color/preto"
            android:text="Imagem"/>

        <ImageButton
            android:id="@+id/btn_add_imagem"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@null"
            android:clickable="true"
            android:src="@drawable/plus_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:id="@+id/txt_tag"
            android:textColor="@color/preto"
            android:text="Tags"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/edtxt_tags"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Folha"
            android:id="@+id/btn_adicionar_folha" />
    </LinearLayout>

</RelativeLayout>
