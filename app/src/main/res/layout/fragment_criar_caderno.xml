<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lab11.nolram.cadernocamera.CriarCadernoActivityFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/cor_forte"
        android:title="@string/criar_caderno"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@+id/btn_criar_caderno"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:layout_below="@id/toolbar"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txt_title"
                android:id="@+id/txt_titulo" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/edtxt_titulo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txt_description"
                android:id="@+id/txt_descricao" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/edtxt_descricao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txt_cor"
                android:id="@+id/txt_cor" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:id="@+id/rd_cor"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true">

                    <RadioButton
                        android:id="@+id/rd_alizarin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_alizarin"/>

                    <RadioButton
                        android:id="@+id/rd_amethyst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_amethyst"/>

                    <RadioButton
                        android:id="@+id/rd_carrot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_carrot"/>

                    <RadioButton
                        android:id="@+id/rd_pink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_clouds"/>

                    <RadioButton
                        android:id="@+id/rd_concrete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_concrete"/>

                    <RadioButton
                        android:id="@+id/rd_emerald"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_emerald"/>

                    <RadioButton
                        android:id="@+id/rd_peter_river"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_peter_river"/>

                    <RadioButton
                        android:id="@+id/rd_sun_flower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_sun_flower"/>

                    <RadioButton
                        android:id="@+id/rd_turquoise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_turquoise"/>

                    <RadioButton
                        android:id="@+id/rd_wet_asphalt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_wet_asphalt"/>

                    <RadioButton
                        android:id="@+id/rd_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/right_escolhas"
                        android:layout_marginEnd="@dimen/right_escolhas"
                        android:layout_marginTop="@dimen/top_escolhas"
                        android:button="@drawable/cb_black"/>

                </RadioGroup>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txt_icon"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_img_picker"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/book_2"/>

        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_criar_caderno"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_criar_caderno" />
</RelativeLayout>
